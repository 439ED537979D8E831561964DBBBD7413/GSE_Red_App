<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScratchGiftDetail"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/giftitle"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="5dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="Get your tickets on BookMyShow"
                android:textColor="@color/colorBlack"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/refer1" />

            <TextView
                android:id="@+id/refercode"
                android:background="@drawable/borderdashed"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="582MAPRO4EDU"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/giftsubitle"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Earn a scratch card up to INR 300 for spending INR 300"
                android:textColor="@color/darkgrey" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/cornorroundbutton"
                android:gravity="center"
                android:text="share"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="20dp"
                android:text="Gift Dates"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/giftdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Get Ticket cdknc cdkcndc dcjn dcncnd" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Details"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/giftdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Get Ticket cdknc cdkcndc dcjn dcncndjc vdncdbv cdcncbd vdvjn
djcbdbddvndvjbvdbvdjbvdjbvdjbvdjbv
vdmkvndvdkvndkvndkvndkvndkvnd" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>