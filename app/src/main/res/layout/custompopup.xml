<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:padding="5dp"
    android:gravity="center"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/colorWhite"
        android:text="X"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/rewardcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/close"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:background="@drawable/blacksolidborder"
            android:id="@+id/hidereward">

            <ImageView
                android:id="@+id/popuprewardimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/rewardtrophy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/popuprewardamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.1000"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/popuprewardimage"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:layout_gravity="center"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/popuprewardtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Woohoo!"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rewardcontent"
        android:layout_margin="30dp">

        <Button
            android:id="@+id/popuptellyourfriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/cornorroundbutton"
            android:gravity="center"
            android:padding="20dp"
            android:text="Tell your friends"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</RelativeLayout>