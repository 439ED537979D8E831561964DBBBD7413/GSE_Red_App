<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScratchGiftDetail"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/inviteimage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                android:src="@drawable/invitemain" />

            <TextView
                android:id="@+id/giftitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:text="Become a reason for someone to see the world!"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/giftitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Invite a friend and contribute INR 51 for eye operation. Yes, itâ€™s that simple."
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/giftitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="5dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="5dp"
                android:text="(All the donations will be made to The National Eyesight Foundation by Mapro)"
                android:textColor="@color/colorBlack"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/blacksolidborder">

                <TextView
                    android:id="@+id/giftsubitle"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="SHARE YOUR INVITE CODE"
                    android:textColor="@color/darkgrey" />

                <TextView
                    android:id="@+id/invitecode"
                    android:background="@drawable/borderdashed"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="582MAPRO4EDU"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/whatsappshare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="45dp"
                    android:paddingRight="45dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="18dp"
                    android:text="Whatsapp"
                    android:background="@drawable/whatsacolour"
                    android:drawableLeft="@drawable/whatsapp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/moreoption"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="More options"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>