<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/donationstrip"
    android:layout_height="80dp"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:background="@color/colorMeganta"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/donationimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/heart"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/donationtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toRightOf="@+id/donationimage"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:text="INVITE YOUR FRIEND GET INR 51 on each Download and Signup"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/donationdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/donationtitle"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toRightOf="@+id/donationimage"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorWhite"
                android:text="GET INR 51 on each Download and Signup"
                android:textSize="12dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>