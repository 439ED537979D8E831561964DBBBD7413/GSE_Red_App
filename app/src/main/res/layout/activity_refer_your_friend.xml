<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/referbackground"
    tools:context=".ReferYourFriend">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"> </android.support.v7.widget.Toolbar>
    <android.support.v4.view.ViewPager
        android:id="@+id/slideViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/dotsLayout"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="18dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/refercode"
            android:background="@drawable/dashedline"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="582MAPRO4EDU"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:padding="10dp"/>
        <Button
            android:id="@+id/getstarted"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableTop="@drawable/ic_menu_share"
            android:background="@drawable/solidborder"
            android:padding="8dp"/>
    </LinearLayout>

</RelativeLayout>