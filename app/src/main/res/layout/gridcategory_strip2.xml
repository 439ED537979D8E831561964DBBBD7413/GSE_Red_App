<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:id="@+id/grid_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp">

        <!--Grocery-->
        <LinearLayout
            android:id="@+id/grocery"
            android:orientation="vertical"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:layout_height="120dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/grocery" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Grocery"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>
        <!--Medicine-->
        <LinearLayout
            android:id="@+id/medicine"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medicine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Medicine"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12dp" />

        </LinearLayout>

        <!-- Home services -->
        <LinearLayout
            android:id="@+id/homeservices"
            android:orientation="vertical"
            android:layout_row="0"
            android:layout_column="2"
            android:gravity="center"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="120dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/homeservice" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Home Services"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12dp" />

        </LinearLayout>

        <!--Kids-->
        <LinearLayout
            android:id="@+id/kids"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/colorWhite">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/kids" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12dp"
                android:text="Kids"
                android:padding="5dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!--Hotels-->
        <LinearLayout
            android:id="@+id/hotels"
            android:orientation="vertical"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:layout_height="120dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hotels" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Hotels"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12dp" />

        </LinearLayout>

        <!--Flights-->
        <LinearLayout
            android:id="@+id/flights"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/flight" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Flights"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12dp" />

        </LinearLayout>

        <!--Electroics-->
        <LinearLayout
            android:id="@+id/electronics"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:layout_row="2"
            android:layout_column="0"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/colorWhite">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/electronics" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12dp"
                android:text="Electronics"
                android:padding="5dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!--Books-->
        <LinearLayout
            android:id="@+id/books"
            android:orientation="vertical"
            android:layout_row="2"
            android:layout_column="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:layout_height="120dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/books" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Books"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12dp" />

        </LinearLayout>

        <!--Gifts cakes-->
        <LinearLayout
            android:id="@+id/giftcake"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/gifts" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Gifts &amp; Cakes"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12dp" />

        </LinearLayout>

    </GridLayout>
</RelativeLayout>